<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/login_bg">

    <!-- Description -->
    <TextView
        android:id="@+id/textViewDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescriptionLabel"
        android:layout_marginTop="8dp"
        android:hint="Enter description"/>

    <!-- Amount -->
    <TextView
        android:id="@+id/textViewAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/editTextDescription"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAmountLabel"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"
        android:hint="Enter amount"/>

    <!-- Date -->
    <TextView
        android:id="@+id/textViewDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/editTextAmount"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDateLabel"
        android:layout_marginTop="8dp"
        android:hint="Enter date"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonSave"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/editTextDate"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/yellow_orange">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_gravity="center"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
